<div class="login d-flex align-items-center justify-content-center">
    <div class="sign-form">
        <div class="m-4">
            <h2>
                <%= link_to( root_url, style:"text-decoration:none!important;" ) do%>
                    <div class="back-icon"></div>
                    <%= image_tag("/logo.png", size: "70x40", alt: "Homepage") %>
                <% end %>
                Log in
            </h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
                <%= f.input :login,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "username" } %>
                <%= f.input :password,
                required: true,
                input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
            </div>
            <% end %>

            <hr>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>