<% if notice.present? %>
<div class="alert alert-primary <%= "mb-0" if !has_navbar %>" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="color: #000">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% end %>
<% if alert.present? %>
<div class="alert alert-warning <%= "mb-0" if !has_navbar %>" role="alert">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="color: #000">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% end %>