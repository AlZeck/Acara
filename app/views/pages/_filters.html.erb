<div class="d-flex">
    <a class="ml-auto mr-2" data-toggle="collapse" href="#filterscollapse" role="button" aria-expanded="false" aria-controls="collapseExample">
        Filters
    </a>
</div>
<div class="collapse mb-3" id="filterscollapse">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-wrap flex-sm-row flex-column">
                <div class="col-sm-6">
                    <input class="form-control" id="cords" hidden>
                    <div class="form-group">
                        <label for="searchPlaces">Search Places</label>
                        <div class="form-inline">
                            <input class="form-control w-100" id="searchPlacesInput" placeholder="Search" aria-label="Search">
                            <button type="button" class="btn btn-search" id="searchPlaces" onclick="searchPlaces()">
                                <div class="search-icon"></div>
                            </button>
                            <div class="invalid-feedback">
                                Search field can't be empty.
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="selectSpecificPlace">Select Place</label>
                        <select class="form-control" id="selectSpecificPlace" aria-describedby="selectPlace">
                            <% if @p.present? %>
                                <option data-cords="<%= @w %>"><%= @p %></option>
                            <% end %>
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="startDate">Starting Date</label>
                        <input class="form-control" type="date" id="startDate" aria-describedby="startDate" value="<%= @es %>">
                        <div class="invalid-feedback">
                            invalid date.
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="endingDate">Ending Date</label>
                        <input class="form-control" type="date" id="endingDate" aria-describedby="endDate" value="<%= @ee %>">
                        <div class="invalid-feedback">
                            invalid date.
                        </div>
                    </div>
                </div>
                <div class="col d-flex">
                    <button class="ml-auto btn btn-danger" onclick="clearFilters()"> Clear filters </button>
                    <button class="ml-4 btn btn-primary" onclick="addFilters()"> Add filters </button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://js.api.here.com/v3/3.1/mapsjs-core.js" type="text/javascript" charset="utf-8"></script>
<script src="https://js.api.here.com/v3/3.1/mapsjs-service.js" type="text/javascript" charset="utf-8"></script>
<%= javascript_include_tag "filters" %>